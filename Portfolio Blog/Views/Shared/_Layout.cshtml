<!DOCTYPE html>
<html>
<head>
    <!-- Meta Tag -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- SEO -->
    <meta name="description" content="150 words">
    <meta name="author" content="uipasta">
    <meta name="url" content="http://www.yourdomainname.com">
    <meta name="copyright" content="company name">
    <meta name="robots" content="index,follow">


    <title>Blog</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="images/favicon/favicon.ico">
    <link rel="apple-touch-icon" sizes="144x144" type="image/x-icon" href="images/favicon/apple-touch-icon.png">

    <!-- All CSS Plugins -->
    <link rel="stylesheet" type="text/css" href="~/Content/plugin.css">

    <!-- Main CSS Stylesheet -->
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">

    <!-- Google Web Fonts  -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,300,500,600,700">
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css">


    <!-- HTML5 shiv and Respond.js support IE8 or Older for HTML5 elements and media queries -->
    <!--[if lt IE 9]>
       <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
       <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <title>@ViewBag.Title - Allison Tsatsa </title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <style>

        .post-title {
            font-size: xx-large;
            font-family: 'Palatino Linotype'
        }
    </style>

</head>

<body>


    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    <!-- Preloader Start -->
    <div class="preloader">
        <div class="rounder"></div>
    </div>
    <!-- Preloader End -->

    <div id="main">
        <div class="container">
            <div class="row">

                <!-- About Me (Left Sidebar) Start -->
                <div class="col-md-3">
                    @*<div class="about-fixed">*@
                    <div class="my-pic">
                        <img src="~/Content/Images/white mountains.jpg">
                        <a href="javascript:void(0)" class="collapsed" data-target="#menu" data-toggle="collapse"><i class="icon-menu menu"></i></a>
                        <div id="menu" class="collapse">
                            <ul class="menu-link">
                                <li><a href="Content/Allison Tsatsa Resume Word.doc">Get CV</a></li>
                                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                                <li><a href="https://atsatsa-portfolio.azurewebsites.net" target="_blank">Portfolio</a></li>
                                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                            </ul>
                        </div>
                    </div>
                    <div class="my-detail">

                        <div class="white-spacing">
                            <span>Allison Tsatsa</span>
                            <span class="my-sub-title">Web Developer</span>
                        </div>
                        <ul class="social-icon">
                            <li><a href="https://www.linkedin.com/in/allison-tsatsa-99631618/" target="_blank" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="https://github.com/allisontsatsa" target="_blank" class="github"><i class="fa fa-github"></i></a></li>
                            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form" }))
                            {
                                <div class="controls controls-row search-row" id="searchBox">
                                    <input id="searchStr" name="searchStr" class="input-block-level" type="text" placeholder="Search Blogs">
                                    <button id="searchStrbtn" name="searchStrbtn" type="submit"><i class="icon-search">Go</i></button>
                                </div>
                            }

                        </ul>


                    </div>
                </div>
                <!-- About Me (Left Sidebar) End -->
                <!-- Blog Post (Right Sidebar) Start -->
                <div class="col-md-9">
                    <div class="col-md-12 page-body">
                        <div class="row">


                            <div class="sub-title">
                                <h1>Allison Tsatsa</h1>

                                @if (Request.IsAuthenticated)
                                {
                                    if (User.IsInRole("Admin"))
                                    {

                                        <a href="@Url.Action("Create", "Blogs")"><i class="icon-doc"></i></a>

                                        <a href="@Url.Action("Index", "Blogs")"><i class="icon-info"></i></a>
                                    }

                                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-logout"></i></a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "Account")"><i class="icon-login" data-toggle="tooltip" title="Log in"></i></a>
                                }

                                @if (Request.IsAuthenticated)
                                {
                                    if (User.IsInRole("Mod"))
                                    {
                                        <a href="@Url.Action("Edit", "Comments")" padding-right="10px"><i class="icon-bubbles"></i></a>
                                    }
                                }

                            </div>
                            <div class="col-md-12 content-page">

                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    <!-- Footer Start -->
    <div class="col-md-12 page-body margin-top-50 footer">
        <footer>
            <ul class="menu-link">
                @*<li><a href="index.html">Home</a></li>*@
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                <li><a href="Content/Allison Tsatsa Resume Word.doc">Download CV</a></li>
                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                @*<li><a href="about.html">About</a></li>*@

            </ul>
        </footer>
    </div>
    <!-- Footer End -->
    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->
    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/plugin.js"></script>

    <!-- Main Javascript File  -->
    <script type="text/javascript" src="~/Scripts/scripts.js"></script>

    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>

    <script type="text/javascript">

        $(function () {
            tinymce.init({
                selector: '#Body'
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)

</body>
</html>
